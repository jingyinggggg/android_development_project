<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/announcementContainer"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="@color/white"
        android:gravity="center">

        <ImageView
            android:id="@+id/notification_image"
            android:layout_width="94dp"
            android:layout_height="70dp"
            android:src="@drawable/maintenance"
            android:layout_marginLeft="20dp" />

        <TextView
            android:id="@+id/notification_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/notification_image"
            android:layout_marginLeft="20dp"
            android:text="Announcement"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/notification_content"
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/notification_image"
            android:layout_below="@+id/notification_title"
            android:layout_marginStart="20dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="20dp"
            android:justificationMode="inter_word"
            android:text="TransportPro will have maintenance tomorrow!"
            android:textSize="14sp"
            android:lineSpacingExtra="5sp"/>

    </RelativeLayout>

    <View
        android:id="@+id/containerSeparator"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/announcementContainer"
        android:background="@color/grey">
    </View>

