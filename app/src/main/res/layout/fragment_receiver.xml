<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ReceiverFragment"
    >

    <TextView
        android:id="@+id/receiver_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Receiver Details"
        android:textStyle="bold"
        android:layout_marginLeft="10sp"
        android:layout_marginRight="10sp"
        android:layout_marginTop="20sp"
        android:textSize="18sp"/>


    <LinearLayout
        android:id="@+id/container_fc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/receiver_detail">


        <TextView
            android:id="@+id/useThisAccountadd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"
            android:text="Use this account address"
            android:textColor="#3386C5"

            />

        <TextView
            android:id="@+id/clear_text"
            android:gravity="right"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"
            android:text="Clear All"
            android:visibility="gone"
            android:textColor="#F70000"

            />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20sp"
        android:layout_below="@+id/container_fc">


        <GridLayout
            android:id="@+id/text_container"
            android:layout_width="match_parent"
            android:layout_height="360sp"
            android:rowCount="8"
            android:columnCount="2"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:layout_gravity="center"
                android:gravity="center">

                <LinearLayout
                    android:layout_width="120sp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="20sp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Name: "
                        android:textSize="18sp"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="250sp"
                    android:layout_height="match_parent">
                    <EditText
                        android:id="@+id/nameTextBox"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="Enter your name"/>

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:layout_gravity="center"
                android:gravity="center">

                <LinearLayout
                    android:layout_width="120sp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="20sp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mobile no: "
                        android:textSize="18sp"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="250sp"
                    android:layout_height="match_parent">
                    <EditText
                        android:id="@+id/MobileTextBox"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="Enter your mobile no"/>

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:layout_gravity="center"
                android:gravity="center">

                <LinearLayout
                    android:layout_width="120sp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="20sp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Email: "
                        android:textSize="18sp"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="250sp"
                    android:layout_height="match_parent">
                    <EditText
                        android:id="@+id/EmailTextBox"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="Enter your email"/>

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:layout_gravity="center"
                android:gravity="center">

                <LinearLayout
                    android:layout_width="120sp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="20sp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="State: "
                        android:textSize="18sp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="250sp"
                    android:layout_height="match_parent">
                    <Spinner
                        android:id="@+id/state_spinner"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        >

                    </Spinner>


                </LinearLayout>
            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:layout_gravity="center"
                android:gravity="center">

                <LinearLayout
                    android:layout_width="120sp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="20sp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Postcode:"
                        android:textSize="18sp"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="250sp"
                    android:layout_height="match_parent">
                    <EditText
                        android:id="@+id/PostcodeTextBox"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="Enter your postcode"/>

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:layout_gravity="center"
                android:gravity="center">

                <LinearLayout
                    android:layout_width="120sp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="20sp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Address 1: "
                        android:textSize="18sp"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="250sp"
                    android:layout_height="match_parent">
                    <EditText
                        android:id="@+id/add1TextBox"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="Enter your address 1"/>

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:layout_gravity="center"
                android:gravity="center">

                <LinearLayout
                    android:layout_width="120sp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="20sp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Address 2: "
                        android:textSize="18sp"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="250sp"
                    android:layout_height="match_parent">
                    <EditText
                        android:id="@+id/add2TextBox"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="Enter your address 2"/>

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:layout_gravity="center"
                android:gravity="center">

                <LinearLayout
                    android:layout_width="120sp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="20sp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Address 3:"
                        android:textSize="18sp"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="250sp"
                    android:layout_height="match_parent">
                    <EditText
                        android:id="@+id/add3TextBox"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="Enter your address 3"/>

                </LinearLayout>
            </LinearLayout>




        </GridLayout>
    </ScrollView>
</RelativeLayout>