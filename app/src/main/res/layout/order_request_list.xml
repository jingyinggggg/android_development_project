<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="20dp"
    android:paddingBottom="30dp"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/order_items_border">

        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/item_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_bold"
                android:text="Item 1"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="105dp"
                    android:layout_height="wrap_content"
                    android:text="Track Number "
                    android:textSize="14sp"
                    android:fontFamily="@font/inter_regular"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/trackNo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1512435151345"
                    android:textSize="14sp"
                    android:fontFamily="@font/inter_regular"
                    android:gravity="end" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="105dp"
                    android:layout_height="wrap_content"
                    android:text="Category"
                    android:textSize="14sp"
                    android:fontFamily="@font/inter_regular"
                    android:layout_weight="1"/>

                <TextView
                    android:id="@+id/track_cat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Racket"
                    android:textSize="14sp"
                    android:fontFamily="@font/inter_regular"
                    android:gravity="end"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="105dp"
                    android:layout_height="wrap_content"
                    android:text="Quantity"
                    android:textSize="14sp"
                    android:fontFamily="@font/inter_regular"
                    android:layout_weight="1"/>

                <TextView
                    android:id="@+id/track_qty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2"
                    android:textSize="14sp"
                    android:fontFamily="@font/inter_regular"
                    android:gravity="end"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="105dp"
                    android:layout_height="wrap_content"
                    android:text="Description"
                    android:textSize="14sp"
                    android:fontFamily="@font/inter_regular"
                    android:layout_weight="1"/>

                <TextView
                    android:id="@+id/track_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="sadkfjhaskljdfhaskjdfhaskaskjdfhaskj"
                    android:textSize="14sp"
                    android:fontFamily="@font/inter_regular"
                    android:gravity="end"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="105dp"
                    android:layout_height="wrap_content"
                    android:text="Weight"
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/inter_regular"
                    android:layout_weight="1"/>

                <TextView
                    android:id="@+id/track_weight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3.12kg"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:fontFamily="@font/inter_regular"
                    android:gravity="end"/>

            </LinearLayout>

        </LinearLayout>

</LinearLayout>