<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".UpdateBookingAdmin">

    <!--Header-->
    <FrameLayout
        android:id="@+id/gridLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#3D3F99"
        android:gravity="center"
        android:paddingTop="20sp"
        android:paddingBottom="10sp">

        <ImageButton
            android:id="@+id/backArrow"
            android:layout_width="32sp"
            android:layout_height="wrap_content"
            android:backgroundTint="#00FFFFFF"
            app:srcCompat="@drawable/baseline_arrow_back_24"
            android:onClick="backHomePage"/>


        <TextView
            android:layout_width="351dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Update Booking"
            android:textColor="#FEFEFE"
            android:textSize="19sp"
            android:textStyle="bold" />

    </FrameLayout>

    <!--Body-->
    <LinearLayout
        android:layout_width="380dp"
        android:layout_height="match_parent"
        android:layout_below="@id/header"
        android:orientation="vertical"
        android:layout_gravity="center">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/customerId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_bold"
                android:text="Customer ID : 000 000"
                android:textAllCaps="true"
                android:textColor="@color/black"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/customerName"
                android:layout_width="250dp"
                android:layout_height="20dp"
                android:fontFamily="@font/inter_regular"
                android:text="Customer name : Ng Jing Ying"
                android:textSize="16dp"
                android:letterSpacing="0.02"
                android:textColor="@color/black"/>

        </LinearLayout>


        <!--Track Details-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="380dp"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="100dp"
                android:layout_height="19dp"
                android:fontFamily="@font/inter_medium"
                android:text="Track Details"
                android:textColor="@color/black"
                android:textSize="16dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="112dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_regular"
                    android:text="Track No :"
                    android:textColor="@color/black" />

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom">

                        <TextView
                            android:id="@+id/trackNo_display"
                            android:layout_width="267dp"
                            android:layout_height="23dp"
                            android:background="@color/white"
                            android:text="000000"
                            android:textColor="@color/black"/>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_gravity="bottom"
                            android:background="@color/grey" />

                    </FrameLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="112dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_regular"
                    android:text="Category :"
                    android:textColor="@color/black" />

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom">

                        <TextView
                            android:id="@+id/category"
                            android:layout_width="267dp"
                            android:layout_height="23dp"
                            android:background="@color/white"
                            android:text="Toy"
                            android:textColor="@color/black"/>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_gravity="bottom"
                            android:background="@color/grey" />

                    </FrameLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="112dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_regular"
                    android:text="Deliver By :"
                    android:textColor="@color/black" />

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom">

                        <TextView
                            android:id="@+id/deliver_type"
                            android:layout_width="267dp"
                            android:layout_height="23dp"
                            android:background="@color/white"
                            android:text="Vehicle"
                            android:textColor="@color/black"/>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_gravity="bottom"
                            android:background="@color/grey" />

                    </FrameLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="112dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_regular"
                    android:text="Quantity :"
                    android:textColor="@color/black" />

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom">

                        <TextView
                            android:id="@+id/quantity"
                            android:layout_width="267dp"
                            android:layout_height="23dp"
                            android:background="@color/white"
                            android:text="0"
                            android:textColor="@color/black"/>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_gravity="bottom"
                            android:background="@color/grey" />

                    </FrameLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:gravity="center">

                <TextView
                    android:layout_width="112dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_regular"
                    android:text="Description :"
                    android:textColor="@color/black" />


                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom">

                        <TextView
                            android:id="@+id/desc"
                            android:layout_width="267dp"
                            android:layout_height="35dp"
                            android:background="@color/white"
                            android:text="none"
                            android:textColor="@color/black" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_gravity="bottom"
                            android:background="@color/grey" />

                        <TextView
                            android:id="@+id/charCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom|end"
                            android:text="0" />

                    </FrameLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:gravity="center">

                <TextView
                    android:layout_width="112dp"
                    android:layout_height="17dp"
                    android:text="Weight :"
                    android:textColor="@color/black"
                    android:fontFamily="@font/inter_regular" />

                <EditText
                    android:id="@+id/weight"
                    android:layout_width="270dp"
                    android:layout_height="30dp"
                    android:hint="Enter the weight of the product"
                    android:textSize="15dp"
                    android:fontFamily="@font/inter_regular"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:background="@drawable/text_box"/>

            </LinearLayout>

            <TextView
                android:id="@+id/error_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Please enter the weight of parcel."
                android:textColor="@color/red"
                android:visibility="gone"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="115dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical">

            <Button
                android:id="@+id/accept_booking"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:backgroundTint="@color/purple"
                android:textColor="@drawable/btn_txt_selector_update_booking"
                android:text="Update and Accept"
                app:cornerRadius="10dp"/>

            <Button
                android:id="@+id/decline_booking"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:backgroundTint="#F00000"
                android:textColor="@drawable/btn_txt_selector_decline"
                android:text="Decline"
                app:cornerRadius="10dp"/>


        </LinearLayout>


    </LinearLayout>


</LinearLayout>