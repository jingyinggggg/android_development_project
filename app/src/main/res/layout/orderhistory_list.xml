<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#E7E7E7">


        <LinearLayout
            android:id="@+id/history_container"
            android:layout_width="match_parent"
            android:layout_height="110sp"
            android:layout_marginTop="15sp"
            android:layout_marginRight="10sp"
            android:layout_marginLeft="10sp"
            android:background="@drawable/requesting_rec"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/category"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="17sp"
                    android:textStyle="bold"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Order Number: "
                    android:textColor="#808080"
                    />
                <TextView
                    android:id="@+id/order_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="#808080"
                    />
                <TextView
                    android:id="@+id/track_item_qty"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#808080"
                    android:gravity="end"
                    />

            </LinearLayout>

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"

                >


                <ImageView
                    android:id="@+id/transport_type"
                    android:layout_width="60sp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="50sp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/order_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="#3386C5"
                        android:layout_gravity="center"
                        android:textSize="16sp">

                    </TextView>

                    <ImageView
                        android:id="@+id/status_image"
                        android:layout_width="80sp"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="60sp"
                    android:layout_height="match_parent"
                    android:gravity="end"
                    android:layout_gravity="top"
                    android:orientation="vertical">


                    <ImageView
                        android:layout_width="23sp"
                        android:layout_height="20sp"
                        android:src="@drawable/order_history_arrow"
                        android:layout_gravity="right|top">

                    </ImageView>
                    <TextView
                        android:id="@+id/order_date"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textSize="11.2sp"
                        android:layout_gravity="end"
                        android:textColor="#717171"
                        />
                </LinearLayout>
            </GridLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>