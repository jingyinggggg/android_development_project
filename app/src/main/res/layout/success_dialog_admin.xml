<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="320dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#3D3F99">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Confirm Update?"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

    </LinearLayout>

    <ImageView
        android:id="@+id/dialog_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|center"
        android:src="@drawable/success"/>


    <TextView
        android:id="@+id/dialog_message"
        android:layout_width="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:text="Confirm update the current status to customer (Track No: 00000), Ng Jing Ying?" />

    <Button
        android:id="@+id/confirm_dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:textAllCaps="false"
        android:text="Confirm Update"
        android:backgroundTint="@color/purple"
        app:cornerRadius="8dp"
        android:textColor="@drawable/btn_txt_selector_update_booking" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_marginBottom="30sp">
        <TextView
            android:id="@+id/cancel_dialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center"
            android:text="Cancel"
            android:textSize="16dp"
            android:textAllCaps="false"
            android:backgroundTint="@color/white"
            android:textColor="@color/black"/>
    </LinearLayout>

</LinearLayout>