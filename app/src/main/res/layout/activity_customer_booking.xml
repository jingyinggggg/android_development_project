<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".CustomerBookingPage">

    <!--Header-->
    <FrameLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#3D3F99"
        android:gravity="center"
        android:paddingTop="20sp"
        android:paddingBottom="10sp">

        <ImageButton
            android:id="@+id/backArrow"
            android:layout_width="32sp"
            android:layout_height="wrap_content"
            android:backgroundTint="#00FFFFFF"
            app:srcCompat="@drawable/baseline_arrow_back_24"
            android:onClick="redirect_homepage"/>


        <TextView
            android:layout_width="351dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="View Booking"
            android:textColor="#FEFEFE"
            android:textSize="19sp"
            android:textStyle="bold" />

    </FrameLayout>

    <!--Body-->
    <RelativeLayout
        android:id="@+id/search_box"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="10sp"
        android:layout_below="@+id/header"
        android:layout_marginLeft="10sp"
        android:layout_marginRight="10sp"
        android:gravity="center"
        >

        <EditText
            android:id="@+id/Search_cId"
            android:layout_width="match_parent"
            android:layout_height="40sp"
            android:paddingLeft="10dp"
            android:drawableLeft="@drawable/search_icon"
            android:drawablePadding="5dp"
            android:hint="Enter Customer Id"
            android:fontFamily="@font/inter_regular"
            android:background="@drawable/text_box"
            />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/search_box"
        android:orientation="vertical"
        android:gravity="center">

        <!-- Header Row -->
        <TableRow
            android:layout_width="390dp"
            android:layout_height="44dp"
            android:background="@drawable/table_header"
            android:layout_marginTop="10dp">

            <!-- Header Column -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_medium"
                android:gravity="center"
                android:padding="8dp"
                android:text="Booking Request"
                android:textColor="@color/white"
                android:textSize="18sp" />

        </TableRow>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/viewBooking"
            android:layout_width="390dp"
            android:layout_height="match_parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">
        </androidx.recyclerview.widget.RecyclerView>
