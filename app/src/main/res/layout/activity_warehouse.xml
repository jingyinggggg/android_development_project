<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".warehouse">

    <!--Header-->
    <include
        layout="@layout/header_layout"
        android:id="@+id/header"/>

    <!--Body-->
    <RelativeLayout
        android:id="@+id/search_box"
        android:layout_width="412dp"
        android:layout_height="40dp"
        android:layout_below="@+id/header"
        android:gravity="center">

        <EditText
            android:id="@+id/Search_cId"
            android:layout_width="406dp"
            android:layout_height="30dp"
            android:paddingLeft="10dp"
            android:drawableLeft="@drawable/search_icon"
            android:drawablePadding="5dp"
            android:hint="Enter Track No"
            android:fontFamily="@font/inter_regular"
            android:background="@drawable/text_box"/>

    </RelativeLayout>


    <!--China Warehouse-->
    <LinearLayout
        android:id="@+id/chn_warehouse_border"
        android:layout_width="390dp"
        android:layout_height="250dp"
        android:layout_below="@+id/search_box"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/border_drop_shadow"
        android:orientation="vertical"
        android:gravity="center_vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center">

            <!--Warehouse Title-->
            <TextView
                android:id="@+id/chn_warehouse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="China Warehouse"
                android:textColor="@color/black"
                android:textSize="18dp"
                android:fontFamily="@font/inter_bold"
                />

            <TextView
                android:id="@+id/chn_warehouse_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="广东省佛山市 南海区狮山镇 狮岭村新马国际C仓黄生转ID0"
                android:fontFamily="@font/inter_regular"/>

            <!--All Parcel button-->
            <Button
                android:id="@+id/chn_allParcel"
                android:layout_width="98dp"
                android:layout_height="29dp"
                android:background="@color/white"
                android:text="All Parcel" />

            <!--Show Parcel Table-->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
>

                <!-- Row 1 -->
                <LinearLayout
                    android:layout_width="350dp"
                    android:layout_height="38dp"
                    android:background="@drawable/table_row">

                    <!-- Column 1 -->
                    <Button
                        android:id="@+id/chn_trackNo"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/inter_regular"
                        android:gravity="center_vertical"
                        android:text="Track No: 000000"
                        android:textAllCaps="false"
                        android:textColor="@color/black"
                        android:onClick="redirect_update_warehouse"/>

                </LinearLayout>

                <!-- Row 2 -->
                <LinearLayout
                    android:layout_width="350dp"
                    android:layout_height="38dp"
                    android:background="@drawable/table_row">

                    <!-- Column 1 -->
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/inter_regular"
                        android:gravity="center_vertical"
                        android:textAllCaps="false"
                        android:textColor="@color/black" />

                </LinearLayout>

                <!-- Row 3 -->
                <LinearLayout
                    android:layout_width="350dp"
                    android:layout_height="38dp"
                    android:background="@drawable/table_row">

                    <!-- Column 1 -->
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/inter_regular"
                        android:gravity="center_vertical"
                        android:textAllCaps="false"
                        android:textColor="@color/black" />

                </LinearLayout>

                <!-- Row 4 -->
                <LinearLayout
                    android:layout_width="350dp"
                    android:layout_height="38dp"
                    android:background="@drawable/table_row">

                    <!-- Column 1 -->
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/inter_regular"
                        android:gravity="center_vertical"
                        android:textAllCaps="false"
                        android:textColor="@color/black" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>


    <!--Malaysia Warehouse-->
    <LinearLayout
        android:id="@+id/msia_warehouse_border"
        android:layout_width="390dp"
        android:layout_height="250dp"
        android:layout_below="@+id/chn_warehouse_border"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/border_drop_shadow"
        android:orientation="vertical"
        android:gravity="center_vertical">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center">

            <!--Warehouse Title-->
            <TextView
                android:id="@+id/msia_warehouse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Malaysia Warehouse"
                android:textColor="@color/black"
                android:textSize="18dp"
                android:fontFamily="@font/inter_bold"
                />

            <TextView
                android:id="@+id/msia_warehouse_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bayan Lepas"
                android:fontFamily="@font/inter_regular"/>

            <!--All Parcel button-->
            <Button
                android:id="@+id/msia_allParcel"
                android:layout_width="98dp"
                android:layout_height="29dp"
                android:background="@color/white"
                android:text="All Parcel" />

            <!--Show Parcel Table-->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center">

                <!-- Row 1 -->
                <LinearLayout
                    android:layout_width="350dp"
                    android:layout_height="38dp"
                    android:background="@drawable/table_row">

                    <!-- Column 1 -->
                    <Button
                        android:id="@+id/msia_trackNo"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/inter_regular"
                        android:gravity="center_vertical"
                        android:text="Track No: 000000"
                        android:textAllCaps="false"
                        android:textColor="@color/black" />

                </LinearLayout>

                <!-- Row 2 -->
                <LinearLayout
                    android:layout_width="350dp"
                    android:layout_height="38dp"
                    android:background="@drawable/table_row">

                    <!-- Column 1 -->
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/inter_regular"
                        android:gravity="center_vertical"
                        android:textAllCaps="false"
                        android:textColor="@color/black" />

                </LinearLayout>

                <!-- Row 3 -->
                <LinearLayout
                    android:layout_width="350dp"
                    android:layout_height="38dp"
                    android:background="@drawable/table_row">

                    <!-- Column 1 -->
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/inter_regular"
                        android:gravity="center_vertical"
                        android:textAllCaps="false"
                        android:textColor="@color/black" />

                </LinearLayout>

                <!-- Row 4 -->
                <LinearLayout
                    android:layout_width="350dp"
                    android:layout_height="38dp"
                    android:background="@drawable/table_row">

                    <!-- Column 1 -->
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/inter_regular"
                        android:gravity="center_vertical"
                        android:textAllCaps="false"
                        android:textColor="@color/black" />

                </LinearLayout>


            </LinearLayout>

        </LinearLayout>

    </LinearLayout>



</RelativeLayout>