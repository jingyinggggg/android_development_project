<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".UnpaidPayment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="120dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/round_corner_layout">

    <ImageView
        android:id="@+id/aircraft"
        android:layout_width="wrap_content"
        android:layout_height="68dp"
        android:layout_marginStart="20dp"
        android:adjustViewBounds="true"
        android:maxWidth="50dp"
        android:layout_gravity=""
        android:maxHeight="50dp"
        android:scaleType="fitCenter"
        android:src="@drawable/aircraft" />

    <TextView
        android:id="@+id/orderNo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="15dp"
        android:layout_alignParentTop="true"
        android:text="Order Number: 1512435151345"
        android:layout_gravity="top" />

        <TextView
            android:id="@+id/dateOrder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_gravity="bottom"
            android:layout_marginTop="35dp"
            android:layout_marginLeft="80dp"
            android:text="10/12/2023 14:22"
            android:textSize="14sp"
            android:textColor="#A9A9A9"/>

        <TextView
            android:id="@+id/priceOrder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="RM 100"
            android:textStyle="bold"
            android:layout_alignParentRight="true"
            android:layout_marginRight="30dp"
            android:layout_marginTop="15dp"/>

        <Button
            android:id="@+id/pay"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="8dp"
            android:layout_below="@id/priceOrder"
            android:text="Pay"
            android:onClick="showPaymentMethodSelectionDialog"
            android:textSize="12sp"
            android:backgroundTint="#3D3F99"
            app:cornerRadius="8dp"/>

    </RelativeLayout>

</LinearLayout>