<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminHomePage">

    <!--Header-->
    <include
        layout="@layout/header_layout"
        android:id="@+id/header"/>

    <RelativeLayout
        android:id="@+id/image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:layout_marginTop="75dp" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:id="@+id/announcement_layout"
        android:layout_below="@+id/image"
        android:layout_marginTop="20sp">

        <Button
            android:id="@+id/post_announcement"
            android:layout_width="390dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/white"
            app:cornerRadius="7dp"
            app:strokeWidth="1dp"
            app:strokeColor="@color/purple"
            android:gravity="center"
            android:text="Post Announcement"
            android:textAllCaps="false"
            android:drawableLeft="@drawable/post_announcement"
            android:paddingLeft="30dip"
            android:paddingRight="26dip"
            android:textColor="@drawable/btn_txt_selector"
            android:textIsSelectable="false" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/warehouse_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/announcement_layout"
        android:layout_marginTop="21dp"
        android:gravity="center">

        <Button
            android:id="@+id/warehouse"
            android:layout_width="390dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:backgroundTint="@color/white"
            app:cornerRadius="7dp"
            app:strokeWidth="1dp"
            app:strokeColor="@color/purple"
            android:text="View and Update Warehouse"
            android:textAllCaps="false"
            android:drawableLeft="@drawable/warehouse"
            android:paddingLeft="30dip"
            android:paddingRight="26dip"
            android:textColor="@drawable/btn_txt_selector"
            android:textIsSelectable="false" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/booking_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/warehouse_layout"
        android:layout_marginTop="21dp"
        android:gravity="center">

        <Button
            android:id="@+id/booking_page"
            android:layout_width="390dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:backgroundTint="@color/white"
            app:cornerRadius="7dp"
            app:strokeWidth="1dp"
            app:strokeColor="@color/purple"
            android:text="Booking Request"
            android:textAllCaps="false"
            android:drawableLeft="@drawable/booking_admin"
            android:paddingLeft="30dip"
            android:paddingRight="26dip"
            android:textColor="@drawable/btn_txt_selector"
            android:textIsSelectable="false"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/order_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/booking_layout"
        android:layout_marginTop="21dp"
        android:gravity="center">

        <Button
            android:id="@+id/order_request"
            android:layout_width="390dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:backgroundTint="@color/white"
            app:cornerRadius="7dp"
            app:strokeWidth="1dp"
            app:strokeColor="@color/purple"
            android:text="Order Request"
            android:textAllCaps="false"
            android:drawableLeft="@drawable/order"
            android:paddingLeft="30dip"
            android:paddingRight="26dip"
            android:textColor="@drawable/btn_txt_selector"
            android:textIsSelectable="false" />

    </LinearLayout>

</RelativeLayout>