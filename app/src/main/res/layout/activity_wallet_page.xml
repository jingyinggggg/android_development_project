<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#E6E6E6"
    tools:context=".WalletPage"
    >

    <View
        android:id="@+id/background"
        android:layout_width="match_parent"
        android:layout_height="123dp"
        android:background="#3D3F99"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RelativeLayout
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="@+id/background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/background">


        <androidx.cardview.widget.CardView
            android:foregroundGravity="center_horizontal"
            android:layout_width="200sp"
            android:layout_height="60dp"
            android:elevation="10dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="10dp">

            <LinearLayout
                android:id="@+id/balanceCard"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/round_corner_layout"
                android:elevation="10dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:orientation="vertical"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:text="Balance"
                    android:textSize="16sp"
                    android:gravity="center"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:text="RM 0.0"
                    android:textColor="#3D3F99"
                    android:textSize="24sp"
                    android:textStyle="bold" />
            </LinearLayout>

        </androidx.cardview.widget.CardView>
    </RelativeLayout>

    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#3D3F99"
        android:gravity="center"
        android:paddingTop="20sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/backArrow"
            android:layout_width="32sp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10sp"
            android:layout_marginTop="10sp"
            android:layout_marginRight="-40sp"
            android:backgroundTint="#00FFFFFF"
            android:onClick="backPreviousActivity"
            app:srcCompat="@drawable/baseline_arrow_back_24" />


        <TextView
            android:layout_width="351dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Wallet"
            android:textColor="#FEFEFE"
            android:textSize="19sp"
            android:textStyle="bold" />

    </GridLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="132dp"
        android:layout_marginTop="65dp"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="@+id/cardView">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">
            <TextView
                android:layout_width="360sp"
                android:layout_height="wrap_content"
                android:text="TOP UP"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:rowCount="2"
            android:columnCount="1"
            android:layout_marginTop="40sp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center">


                <Button
                    android:layout_width="100dp"
                    android:layout_height="39dp"
                    android:backgroundTint="#3D3F99"
                    android:text="RM 5"
                    android:textSize="12sp"
                    app:cornerRadius="8dp" />

                <Button
                    android:layout_width="100dp"
                    android:layout_height="39dp"
                    android:gravity="center"
                    android:backgroundTint="#3D3F99"
                    android:text="RM 10"
                    android:textSize="12sp"
                    app:cornerRadius="8dp"
                    android:layout_marginLeft="30sp"
                    android:layout_marginRight="30sp"/>

                <Button
                    android:layout_width="100dp"
                    android:layout_height="39dp"
                    android:backgroundTint="#3D3F99"
                    android:text="RM 20"
                    android:textSize="12sp"
                    app:cornerRadius="8dp"  />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center">


                <Button
                    android:layout_width="100dp"
                    android:layout_height="39dp"
                    android:backgroundTint="#3D3F99"
                    android:text="RM 50"
                    android:textSize="12sp"
                    app:cornerRadius="8dp"  />

                <Button
                    android:layout_width="100dp"
                    android:layout_height="39dp"
                    android:backgroundTint="#3D3F99"
                    android:text="RM 100"
                    android:textSize="12sp"
                    app:cornerRadius="8dp"
                    android:layout_marginLeft="30sp"
                    android:layout_marginRight="30sp"/>

                <Button
                    android:layout_width="100dp"
                    android:layout_height="39dp"
                    android:backgroundTint="#3D3F99"
                    android:text="RM 200"
                    android:textSize="12sp"
                    app:cornerRadius="8dp" />
            </LinearLayout>
        </GridLayout>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="324dp"
        android:background="#BBBBBB"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="336dp"
        android:textAlignment="center"
        android:drawableLeft="@drawable/recent_icon"
        android:textSize="14sp"
        android:textStyle="bold"
        android:drawablePadding="10dp"
        android:text="Recently Activity"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="62dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="368dp"
        android:background="@drawable/wallet_topup_corner_border"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="23dp"
            android:layout_marginTop="8dp"
            android:text="Top Up"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="22dp"
            android:layout_marginBottom="15dp"
            android:text="20/07/2023 18:49:23"
            android:textColor="#6D6D6D"
            android:textSize="12sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="18dp"
            android:layout_marginBottom="21dp"
            android:text="+ RM 50"
            android:textColor="#3D3F99"
            android:textSize="14sp"
            android:textStyle="bold" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="62dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="444dp"
        android:background="@drawable/wallet_topup_corner_border"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="23dp"
            android:layout_marginTop="8dp"
            android:text="Pay Order"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="22dp"
            android:layout_marginBottom="15dp"
            android:text="20/07/2023 18:49:23"
            android:textColor="#6D6D6D"
            android:textSize="12sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="18dp"
            android:layout_marginBottom="21dp"
            android:text="- RM 25.40"
            android:textColor="#3D3F99"
            android:textSize="14sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <include layout="@layout/bar_navigation" />
</androidx.constraintlayout.widget.ConstraintLayout>