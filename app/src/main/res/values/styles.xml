<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Checkbox style for colored checkbox -->
    <style name="colored_checkBox" parent="Theme.AppCompat.Light">
        <!-- selected checkbox color -->
        <item name="colorAccent">@color/purple</item>
        <!-- default/unselected checkbox color -->
        <item name="android:textColorSecondary">@color/grey</item>
    </style>

    <style name="animation">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>

    <style name="MyTextInputLayout" parent="@style/ThemeOverlay.Material3.TextInputEditText.OutlinedBox">
        <!-- border color -->
        <item name="boxStrokeColor">@color/purple</item>

        <!-- The color of the label when it is collapsed and the text field is active -->
        <item name="hintTextColor">@color/purple</item>

        <!-- The color of the label in all other text field states (such as resting and disabled) -->
        <item name="android:textColorHint">@color/purple</item>
    </style>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorSecondary">#3386C5</item>
    </style>

</resources>